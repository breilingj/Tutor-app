<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageViewgraduation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/icon_graduation" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/baloo"
        android:text="@string/app_name"
        android:layout_below="@id/imageViewgraduation"
        android:textSize="45sp"
        android:textColor="@color/secondaryTextColor"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:fontFamily="@font/baloo"
        android:text="Your trusted academic partner"
        android:textSize="20sp"
        android:textColor="@color/secondaryTextColor"/>


    <Button
        android:id="@+id/buttonTutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:text="@string/tutor"
        android:backgroundTint="@color/buttonColor"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/buttonStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/buttonTutor"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:text="@string/student"
        android:backgroundTint="@color/buttonColor"
        android:textColor="#000000"
        android:textSize="20sp"/>



</RelativeLayout>